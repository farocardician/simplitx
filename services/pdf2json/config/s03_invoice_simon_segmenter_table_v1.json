{
  "name": "invoice_simon_table_segmenter_v1",
  "description": "Table header and body segmentation for Simon invoices",
  "version": "1.0.0",
  "coords": {
    "normalized": true,
    "y_origin": "top",
    "precision": 6
  },
  "tolerances": {
    "y_line_tol": 0.006,
    "parent_overlap_tol": 0.0
  },
  "defaults": {
    "margin": {
      "top": 0.0,
      "bottom": 0.0,
      "left": 0.0,
      "right": 0.0
    },
    "min_height": 0.01
  },
  "regions": [
    {
      "id": "table_header",
      "label": "table_header",
      "on_pages": "all",
      "keep": "first",
      "detect": {
        "by": "anchors",
        "start_anchor": {
          "patterns": ["9\\)NO\\."],
          "flags": {
            "ignore_case": false
          },
          "select": "first"
        },
        "capture_window": {
          "mode": "around",
          "dx": 0.8,
          "dy": 0.02
        }
      }
    },
    {
      "id": "table_body",
      "label": "table_body",
      "on_pages": "all",
      "keep": "all",
      "detect": {
        "by": "anchors",
        "start_anchor": {
          "patterns": ["^\\d{1,3}$"],
          "flags": {
            "ignore_case": false
          },
          "select": "leftmost"
        },
        "capture_window": {
          "mode": "right_then_rows",
          "rows": 50,
          "row_tol": 0.015,
          "dx_max": 0.9,
          "gap_x": 0.0
        },
        "margin": {
          "top": 0.0,
          "bottom": -0.17,
          "left": -0.08,
          "right": 0.0
        }
      }
    }
  ]
}
