{
  "profile": {
    "name": "Visi Invoice Extractor V1",
    "fail_mode": "hard",
    "required_fields": [
      "buyer_name",
      "invoice_number",
      "invoice_date",
      "subtotal",
      "tax_base",
      "tax",
      "tax_amount",
      "grand_total"
    ],
    "expected_fields": [
      "income_tax",
      "income_tax_amount"
    ],
    "optional_fields": []
  },
  "strict_segments": true,
  "use_stage2_normalized": true,
  "totals": {
    "mode": "segments_only"
  },
  "confidence": {
    "thresholds": {
      "high": {
        "max_lines": 1,
        "max_tokens": 15
      },
      "medium": {
        "max_lines": 3,
        "max_tokens": 60
      }
    }
  },
  "fields": {
    "buyer_name": {
      "strategy": "regex_capture",
      "segment": "Buyer",
      "post": {
        "regex_pattern": ["(PT\\.[A-Z\\.]+)"]
      }
    },
    "invoice_number": {
      "strategy": "regex_capture",
      "segment": "Invoice Number",
      "post": {
        "regex_pattern": [":(\\d+)"]
      }
    },
    "invoice_date": {
      "strategy": "regex_capture",
      "segment": "Invoice Date",
      "post": {
        "regex_pattern": [":([A-Za-z]+\\d+,\\d{4})"]
      }
    },
    "subtotal": {
      "strategy": "regex_capture",
      "segment": "Sub Total",
      "post": {
        "regex_pattern": ["([\\d\\.]+\\d{3})\\s+SubTotal"]
      }
    },
    "tax_base": {
      "strategy": "regex_capture",
      "segment": "Tax Base",
      "post": {
        "regex_pattern": ["([\\d\\.]+\\d{3})\\s+TaxBase"]
      }
    },
    "tax": {
      "strategy": "regex_capture",
      "segment": "VAT",
      "post": {
        "regex_pattern": ["PPN-VAT(\\d+%)"]
      }
    },
    "tax_amount": {
      "strategy": "regex_capture",
      "segment": "VAT",
      "post": {
        "regex_pattern": ["([\\d\\.]+\\d{3})\\s+PPN-VAT"]
      }
    },
    "income_tax": {
      "strategy": "constant",
      "segment": "Total Amount",
      "post": {
        "value": ""
      }
    },
    "income_tax_amount": {
      "strategy": "constant",
      "segment": "Total Amount",
      "post": {
        "value": ""
      }
    },
    "grand_total": {
      "strategy": "regex_capture",
      "segment": "Total Amount",
      "post": {
        "regex_pattern": ["([\\d\\.]+\\d{3})\\s+TotalAmount"]
      }
    }
  },
  "guards": {
    "buyer_name": {
      "min_len": 3,
      "max_len": 100,
      "allowed_chars": "A-Za-z\\s\\.\\-\\'/\\&"
    },
    "invoice_number": {
      "min_len": 3,
      "max_len": 50,
      "allowed_chars": "0-9"
    },
    "invoice_date": {
      "min_len": 6,
      "max_len": 20,
      "allowed_chars": "A-Za-z0-9\\s,"
    },
    "subtotal": {
      "min_len": 1,
      "max_len": 20,
      "allowed_chars": "0-9."
    },
    "tax_base": {
      "min_len": 1,
      "max_len": 20,
      "allowed_chars": "0-9."
    },
    "tax": {
      "min_len": 1,
      "max_len": 10,
      "allowed_chars": "0-9.%"
    },
    "tax_amount": {
      "min_len": 1,
      "max_len": 20,
      "allowed_chars": "0-9."
    },
    "income_tax": {
      "min_len": 0,
      "max_len": 10,
      "allowed_chars": "0-9.%"
    },
    "income_tax_amount": {
      "min_len": 0,
      "max_len": 20,
      "allowed_chars": "0-9."
    },
    "grand_total": {
      "min_len": 1,
      "max_len": 20,
      "allowed_chars": "0-9."
    }
  }
}