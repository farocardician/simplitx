{
  "profile": {
    "name": "Sil Invoice Extractor V1",
    "fail_mode": "hard",
    "required_fields": [
      "buyer_name",
      "invoice_number",
      "invoice_date",
      "grand_total"
    ],
    "expected_fields": [
      "subtotal",
      "tax_based",
      "tax_amount"
    ]
  },
  "strict_segments": true,
  "use_stage2_normalized": true,
  "totals": {
    "mode": "segments_only",
    "field_names": [
      "subtotal",
      "tax_based",
      "tax_amount",
      "grand_total"
    ]
  },
  "confidence": {
    "thresholds": {
      "high": {
        "max_lines": 1,
        "max_tokens": 15
      },
      "medium": {
        "max_lines": 3,
        "max_tokens": 60
      }
    }
  },
  "fields": {
    "buyer_name": "buyer_name",
    "invoice_number": {
      "strategy": "regex_capture",
      "segment": "invoice_number",
      "post": {
        "regex_pattern": ["(\\d{10})"]
      }
    },
    "invoice_date": {
      "strategy": "regex_capture",
      "segment": "invoice_date",
      "post": {
        "regex_pattern": ["(\\d{2}\\.\\d{2}\\.\\d{4})"]
      }
    },
    "subtotal": {
      "strategy": "regex_capture",
      "segment": "subtotal",
      "post": {
        "regex_pattern": [
          "Items\\s+total:?\\s*([\\d.,]+)",
          "([\\d.,]+)\\s+Items\\s+total"
        ]
      }
    },
    "tax_based": {
      "strategy": "regex_capture",
      "segment": "total",
      "post": {
        "regex_pattern": [
          "([\\d.,]+)\\s+T\\s+ax",
          "T\\s+([\\d.,]+)\\s+ax",
          "ax\\s*Based:?\\s*([\\d.,]+)",
          "Tax\\s*Based:?\\s*([\\d.,]+)"
        ]
      }
    },
    "tax_amount": {
      "strategy": "regex_capture",
      "segment": "total",
      "post": {
        "regex_pattern": [
          "([\\d.,]+)\\s+VAT",
          "VAT[^0-9]*(?:\\d[\\d.,]*[^0-9]+){4}([\\d.,]+)"
        ]
      }
    },
    "grand_total": {
      "strategy": "regex_capture",
      "segment": "grand_total",
      "post": {
        "regex_pattern": [
          "Final\\s+invoice\\s+amount:?\\s*(?:IDR\\s*)?([\\d.,]+)",
          "IDR\\s+([\\d.,]+)",
          "([\\d.,]+)\\s+IDR",
          "^([\\d.,]+)\\s+Final"
        ]
      }
    }
  },
  "guards": {
    "buyer_name": {
      "min_len": 3,
      "max_len": 100,
      "allowed_chars": "A-Za-z\\s\\.\\-\\'/\\&,"
    },
    "invoice_number": {
      "min_len": 3,
      "max_len": 50,
      "allowed_chars": "0-9"
    },
    "invoice_date": {
      "min_len": 8,
      "max_len": 12,
      "allowed_chars": "0-9."
    },
    "subtotal": {
      "min_len": 0,
      "max_len": 20,
      "allowed_chars": "0-9.,"
    },
    "tax_based": {
      "min_len": 0,
      "max_len": 20,
      "allowed_chars": "0-9.,"
    },
    "tax_amount": {
      "min_len": 0,
      "max_len": 20,
      "allowed_chars": "0-9.,"
    },
    "grand_total": {
      "min_len": 1,
      "max_len": 20,
      "allowed_chars": "0-9.,"
    }
  }
}
