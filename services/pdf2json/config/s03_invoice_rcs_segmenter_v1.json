{
  "name": "RCS Invoice Segmenter Config V1",
  "version": "1.0",
  "coords": { "normalized": true, "y_origin": "top", "precision": 6 },
  "defaults": { "min_height": 0.02 },
  "regions": [
    {
      "id": "header",
      "label": "Header",
      "on_pages": "first",
      "detect": {
        "by": "anchors",
        "start_anchor": {
          "patterns": ["\\bINVOICE\\b"],
          "flags": { "ignore_case": true }
        },
        "end_anchor": {
          "patterns": [
            "^Amount\\(IDR\\)$",
            "^Description$",
            "^No\\.$"
          ],
          "flags": { "ignore_case": true }
        },
        "margin": {
          "right": 0.43,
          "bottom": -0.02
        }
      },
      "fallbacks": [
        {
          "by": "y_cutoff",
          "edge": "bottom",
          "y": 0.24
        }
      ],
      "keep": "all"
    }
  ]
}
