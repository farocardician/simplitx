{
  "profile": {
    "name": "Esi Invoice Extractor V1",
    "fail_mode": "hard",
    "required_fields": [
      "buyer_name",
      "invoice_number",
      "invoice_date",
      "subtotal",
      "tax_base",
      "tax",
      "tax_amount",
      "grand_total"
    ],
    "expected_fields": [
      "income_tax",
      "income_tax_amount"
    ],
    "optional_fields": []
  },
  "strict_segments": true,
  "use_stage2_normalized": true,
  "totals": {
    "mode": "segments_only"
  },
  "confidence": {
    "thresholds": {
      "high": {
        "max_lines": 1,
        "max_tokens": 15
      },
      "medium": {
        "max_lines": 3,
        "max_tokens": 60
      }
    }
  },
  "fields": {
    "buyer_name": {
      "strategy": "first_line_pattern",
      "segment": "buyer_name",
      "post": {
        "regex_pattern": [":\\s*(.+)"]
      }
    },
    "invoice_number": {
      "strategy": "regex_capture",
      "segment": "invoice_number",
      "post": {
        "regex_pattern": ["Invoice\\s+No\\.\\s*:\\s*([A-Z0-9\\/]+)"]
      }
    },
    "invoice_date": {
      "strategy": "regex_capture",
      "segment": "invoice_date",
      "post": {
        "regex_pattern": ["Invoice\\s+Date\\s*:\\s*(\\d{1,2}\\s+[A-Za-z]+\\s+\\d{4})"]
      }
    },
    "seller_name": {
      "strategy": "constant",
      "post": { "value": "PT Electronic Science Indonesia" }
    },    
    "subtotal": {
      "strategy": "regex_capture",
      "segment": "subtotal",
      "post": {
        "regex_pattern": ["Rp\\s+([\\d,\\.]+)"]
      }
    },
    "tax_base": {
      "strategy": "regex_capture",
      "segment": "total",
      "post": {
        "regex_pattern": ["Based\\s+VAT\\s+Rp\\s+([\\d,\\.]+)"]
      }
    },
    "tax": {
      "strategy": "constant",
      "segment": "vat",
      "post": {
        "value": "11%"
      }
    },
    "tax_amount": {
      "strategy": "regex_capture",
      "segment": "vat",
      "post": {
        "regex_pattern": ["VAT\\s+Rp\\s+([\\d,\\.]+)"]
      }
    },
    "income_tax": {
      "strategy": "constant",
      "segment": "grand_total",
      "post": {
        "value": ""
      }
    },
    "income_tax_amount": {
      "strategy": "constant",
      "segment": "grand_total",
      "post": {
        "value": ""
      }
    },
    "grand_total": {
      "strategy": "regex_capture",
      "segment": "total",
      "post": {
        "regex_pattern": ["total\\s+Rp\\s+([\\d,\\.]+)"]
      }
    }
  },
  "guards": {
    "buyer_name": {
      "min_len": 3,
      "max_len": 100,
      "allowed_chars": "A-Za-z\\s\\.\\-\\'/\\&"
    },
    "invoice_number": {
      "min_len": 3,
      "max_len": 50,
      "allowed_chars": "A-Za-z0-9\\/"
    },
    "invoice_date": {
      "min_len": 8,
      "max_len": 20,
      "allowed_chars": "A-Za-z0-9\\s"
    },
    "subtotal": {
      "min_len": 1,
      "max_len": 25,
      "allowed_chars": "0-9.,"
    },
    "tax_base": {
      "min_len": 1,
      "max_len": 25,
      "allowed_chars": "0-9.,"
    },
    "tax": {
      "min_len": 1,
      "max_len": 10,
      "allowed_chars": "0-9.%"
    },
    "tax_amount": {
      "min_len": 1,
      "max_len": 25,
      "allowed_chars": "0-9.,"
    },
    "income_tax": {
      "min_len": 0,
      "max_len": 10,
      "allowed_chars": "0-9.%"
    },
    "income_tax_amount": {
      "min_len": 0,
      "max_len": 25,
      "allowed_chars": "0-9.,"
    },
    "grand_total": {
      "min_len": 1,
      "max_len": 25,
      "allowed_chars": "0-9.,"
    }
  }
}